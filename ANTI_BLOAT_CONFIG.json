{
  "version": "1.0.0",
  "description": "SalesHub CRM Anti-Bloat Configuration",
  "rules": {
    "fileSizeLimits": {
      "frontendComponents": 200,
      "backendHandlers": 150,
      "utilityFunctions": 50,
      "configurationFiles": 100,
      "scripts": 100,
      "customizable": true
    },
    "functionDesign": {
      "maxParameters": 4,
      "maxNestingLevels": 3,
      "maxLinesPerFunction": 20,
      "maxLinesPerClass": 100,
      "customizable": true
    },
    "importOptimization": {
      "enforceSpecificImports": true,
      "preventWildcardImports": true,
      "groupImports": true,
      "customizable": true
    },
    "logging": {
      "development": {
        "level": "debug",
        "includeTimestamps": true,
        "includeRequestIds": false,
        "logSlowRequests": true,
        "slowRequestThreshold": 1000
      },
      "production": {
        "level": "error",
        "includeTimestamps": false,
        "includeRequestIds": false,
        "logSlowRequests": false,
        "slowRequestThreshold": 5000
      },
      "customizable": true
    },
    "apiClient": {
      "useCentralizedClient": true,
      "includeErrorHandling": true,
      "includeRetryLogic": false,
      "includeRequestTimeout": true,
      "timeoutMs": 5000,
      "customizable": true
    },
    "errorHandling": {
      "includeStackTraces": false,
      "includeRequestContext": false,
      "logAllErrors": true,
      "customizable": true
    },
    "performance": {
      "enableCaching": false,
      "enableMemoization": false,
      "enableLazyLoading": true,
      "customizable": true
    }
  },
  "enforcement": {
    "strictMode": false,
    "warningsOnly": true,
    "autoFix": false,
    "customizable": true
  },
  "monitoring": {
    "trackCodeMetrics": true,
    "trackPerformanceMetrics": true,
    "trackMaintenanceMetrics": true,
    "customizable": true
  },
  "customization": {
    "allowUserOverrides": true,
    "environmentSpecific": true,
    "featureFlags": true,
    "userPreferences": true
  },
  "examples": {
    "beforeAfter": true,
    "codeSnippets": true,
    "bestPractices": true
  }
}
