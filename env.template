# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/saleshub_crm"

# JWT Secret (use a strong, random string)
JWT_SECRET="your-super-secret-jwt-key-here"

# Server Configuration
PORT=3000
NODE_ENV=development

# Email Configuration (for future email integration)
SMTP_HOST="smtp.gmail.com"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_PORT=587
SMTP_SECURE=false

# Optional: External Service API Keys
LINKEDIN_API_KEY="your-linkedin-api-key"
FACEBOOK_API_KEY="your-facebook-api-key"
TWITTER_API_KEY="your-twitter-api-key"

# Optional: AI Service Configuration
OPENAI_API_KEY="your-openai-api-key"
AI_SERVICE_URL="https://api.openai.com/v1"

# Optional: File Storage Configuration
FILE_STORAGE_PATH="./uploads"
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Optional: Redis Configuration (for caching)
REDIS_URL="redis://localhost:6379"

# Optional: Analytics Configuration
GOOGLE_ANALYTICS_ID="your-ga-id"
MIXPANEL_TOKEN="your-mixpanel-token" 